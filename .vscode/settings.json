{
    "window.autoDetectColorScheme": false,
    "npm-intellisense.scanDevDependencies": true,
    "files.autoSave": "onFocusChange",
    "editor.defaultFormatter": "google.antigravity",
    "editor.allowVariableFontsInAccessibilityMode": true,
    "git.ignoreLimitWarning": true,
    "git.allowForcePush": true,
    "git.allowNoVerifyCommit": true,
    "git.alwaysShowStagedChangesResourceGroup": true,
    "git.alwaysSignOff": true,
    "git.autoStash": true,
    "git.blame.editorDecoration.enabled": true,
    "git.branchRandomName.enable": true,
    "git.confirmSync": false,
    "git.diagnosticsCommitHook.enabled": true,
    "git.enableSmartCommit": false,
    "git.fetchOnPull": true,
    "git.followTagsWhenSync": true,
    "github-actions.workflows.pinned.refresh.enabled": true,
    "github-actions.use-enterprise": true,
    "githubIssues.alwaysPromptForNewIssueRepo": true,
    "githubPullRequests.codingAgent.uiIntegration": true,
    "githubPullRequests.experimental.useQuickChat": true,
    "githubPullRequests.ignoreSubmodules": true,
    "gitlab.real-timeSecurityScan.enabled": true,
    "gitlab.featureFlags.flowBuilder": true,
    "gitlab.debug": true,
    "gitlab.showPipelineUpdateNotifications": true,
    "cloudcode.compute.sshInternalIp": true,
    "cloudcode.enableConfigLessExperience": true
}